{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm install && cd frontend && npm install",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "frontend/.next",
  "functions": {
    "api/backend.py": {
      "runtime": "python3.11",
      "maxDuration": 15
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/backend" }
  ]
}
